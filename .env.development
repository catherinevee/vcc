# VCC Local Development Configuration
# Copy this file to .env and update the values

# Security (REQUIRED)
VCC_SECRET_KEY=dev-secret-key-change-this-in-production-make-it-very-long-and-random

# GitHub OAuth (Optional - for authentication features)
# Get these from: https://github.com/settings/developers
VCC_GITHUB_CLIENT_ID=your_github_client_id_here
VCC_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Redis (Optional - app will work without it)
VCC_REDIS_URL=redis://localhost:6379/0

# WebAuthn (for local development)
VCC_RP_ID=localhost

# Application Settings
VCC_MAX_REPO_SIZE_MB=50
VCC_ANALYSIS_TIMEOUT=180
VCC_MAX_ANALYSES_PER_DAY=20

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=True
